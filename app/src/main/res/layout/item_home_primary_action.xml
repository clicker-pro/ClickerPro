<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_home_primary_action_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:focusable="true"
        android:clickable="true"
        android:outlineProvider="bounds"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:checkedIconSize="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_home_primary_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?selectableItemBackground"
            android:padding="18dp">
            <ImageView
                android:id="@+id/item_home_primary_action_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:id="@+id/item_home_primary_action_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="18dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:lines="1"
                app:layout_constraintTop_toTopOf="@id/item_home_primary_action_icon"
                app:layout_constraintLeft_toRightOf="@id/item_home_primary_action_icon"
                app:layout_constraintBottom_toTopOf="@id/item_home_primary_action_desc"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/item_home_primary_action_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="@id/item_home_primary_action_icon"
                app:layout_constraintLeft_toRightOf="@id/item_home_primary_action_icon"
                app:layout_constraintTop_toBottomOf="@id/item_home_primary_action_title"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>